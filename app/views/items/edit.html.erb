<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <%= form_tag("/items/#{@item.id}/update",{multipart: true}) do %>
      <div class="form">
        <div class="form-body">
          <% @item.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <%= @item.image_name %>
          <%= @item.id %>
          <p>画像</p>
          <input name="image" type="file" value="<%= @item.image_name %>">
          <p>出品内容</p>
          <textarea name="content"><%= @item.content %></textarea>
          <input type="submit" value="保存">
        </div>
      </div>
    <% end %>
  </div>
</div>